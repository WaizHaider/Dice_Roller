<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game2"
    android:background="@color/grey">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="140dp"
        android:textSize="40sp"
        android:text="Dice Roller"
        android:textColor="#3D33A8"
        android:textStyle="bold">

    </TextView>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="25dp"
        app:srcCompat="@drawable/logo" />

    <RelativeLayout
        android:id="@+id/dice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/dice_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="240dp"
            android:layout_marginStart="55dp"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/dice_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="240dp"
            android:layout_marginStart="155dp"
            app:srcCompat="@drawable/logo" />
        <ImageView
            android:id="@+id/dice_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="240dp"
            android:layout_marginStart="255dp"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/dice_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="350dp"
            android:layout_marginStart="105dp"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/dice_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="350dp"
            android:layout_marginStart="205dp"
            app:srcCompat="@drawable/logo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:text="Score Details"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:textColor="#3D33A8"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:text=""
            android:textSize="18sp"
            android:layout_marginTop="45dp"
            android:layout_marginStart="40dp"
            android:textColor="#3D33A8"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:text=""
            android:textSize="18sp"
            android:layout_marginTop="45dp"
            android:layout_marginStart="220dp"
            android:textColor="#3D33A8"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/score1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:text=""
            android:textSize="18sp"
            android:layout_marginTop="80dp"
            android:layout_marginStart="90dp"
            android:textColor="#3D33A8"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/score2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:text=""
            android:textSize="18sp"
            android:layout_marginTop="80dp"
            android:layout_marginStart="290dp"
            android:textColor="#3D33A8"
            android:textStyle="bold">

        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rollBtn"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_below="@+id/dice"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="80dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/orange_button">

        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="7dp"
            android:text="Roll Dice"
            android:textColor="@color/white"
            android:textSize="25sp">

        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/showBtn"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_below="@+id/rollBtn"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="80dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/orange_button">

        <TextView
            android:id="@+id/textview22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="7dp"
            android:text="Show Score"
            android:textColor="@color/white"
            android:textSize="25sp">

        </TextView>
    </RelativeLayout>

    <TextView
        android:id="@+id/target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:text="Target:"
        android:layout_below="@+id/dice"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:textColor="#3D33A8"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/targetValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:text="101"
        android:layout_below="@+id/dice"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="100dp"
        android:textColor="#3D33A8"
        android:textStyle="bold">

    </TextView>

</RelativeLayout>